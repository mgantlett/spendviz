{
  "name": "spendviz",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "backend": "npx tsx backend/server.ts",
    "frontend": "vite",
    "start:all": "npm run build:css && concurrently \"npm run backend\" \"npm run frontend\"",
    "start:prod": "npm run build:css && npx tsx backend/server.ts",
    "build:css": "tailwindcss -i ./src/index.css -o ./src/tailwind.css --content './src/**/*.{js,ts,jsx,tsx}'",
    "test:e2e:all": "npm run build:css && concurrently \"cross-env DB_PATH=spendviz.test.sqlite3 npm run backend\" \"npm run frontend\"",
    "generate-demo-data": "npx tsx backend/scripts/generate-test-data.ts",
    "setup-demo-user": "npx tsx backend/scripts/setup-demo-user.ts",
    "clean-db": "rm -f spendviz.multi-user.sqlite3",
    "init-demo-env": "npm run clean-db && npm run generate-demo-data && npm run setup-demo-user"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.511.0",
    "multer": "^2.0.0",
    "papaparse": "^5.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.3.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.29",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/react-popover": "^0.5.8",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "playwright": "^1.52.0",
    "postcss": "^8.5.3",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^3.4.3",
